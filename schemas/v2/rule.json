{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[0-9a-z]{3}-[0-9x]{3}-[0-9x]{3}$"
    },
    "name": {
      "type": "string"
    },
    "tags": {
      "type": "object",
      "maxProperties": 32,
      "properties": {
        "type": {
          "type": "string"
        },
        "crs_id": {
          "type": "string"
        },
        "category": {
          "type": "string"
        }
      },
      "required": [
        "type",
        "category"
      ],
      "additionalProperties": false
    },
    "conditions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "condition.json"
      }
    },
    "transformers": {
      "type": "array",
      "items": {
        "enum": [
          "htmlEntityDecode",
          "jsDecode",
          "cssDecode",
          "base64Encode",
          "base64Decode",
          "base64DecodeExt",
          "urlDecode",
          "urlDecodeUni",
          "normalizePath",
          "normalizePathWin",
          "compressWhiteSpace",
          "lowercase",
          "length",
          "cmdLine",
          "removeComments",
          "numerize",
          "removeNulls"
        ]
      }
    }
  },
  "required": [
    "id",
    "name",
    "tags",
    "conditions",
    "transformers"
  ],
  "additionalProperties": false
}